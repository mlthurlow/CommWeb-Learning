<!-- Wappler include head-page="layouts/admin" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="manage_users" appConnect="local" components="{dmxStateManagement:{},dmxBootstrap5TableGenerator:{},dmxFormatter:{}}" -->
<meta name="ac:route" content="/tmoadmin/manage_users">
<dmx-serverconnect id="conn_users" url="/api/admin/user/search" dmx-param:filter="input1.value"></dmx-serverconnect>
<div class="mt-4 container-fluid">
    <div class="row">
        <div class="col">
            <div class="form-group mb-3 row">
                <label for="input1" class="col-sm-2 col-form-label">Search</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="input1" name="input1" aria-describedby="input1_help" placeholder="Enter keyword">
                    <small id="input1_help" class="form-text text-muted">Your input is very valuable.</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-sm">
                    <thead>
                        <tr>
                            <th>User_ID</th>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>Email</th>
                            <th>Date signup</th>
                            <th>Validated</th>
                        </tr>
                    </thead>
                    <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="conn_users.data.query" id="tableRepeat2">
                        <tr>
                            <td dmx-text="user_id"></td>
                            <td dmx-text="first_name"></td>
                            <td dmx-text="last_name"></td>
                            <td dmx-text="email"></td>
                            <td dmx-text="date_signup"></td>
                            <td dmx-text="validated"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>